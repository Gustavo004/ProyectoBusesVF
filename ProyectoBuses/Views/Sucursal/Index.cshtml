@using ProyectoBuses.Models
@model List<SucursalCLS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("Agregar", "Agregar", "Sucursal", null, new { @class = "btn btn-primary" })

<table class="table table-striped">

    <thead>

        <tr>
            <td>@Html.LabelFor(p => Model[0].idsucursal)</td>
            <td>@Html.LabelFor(p => Model[0].nombre)</td>
            <td>@Html.LabelFor(p => Model[0].direccion)</td>
            <td>@Html.LabelFor(p => Model[0].telefono)</td>
            <td>@Html.LabelFor(p => Model[0].email)</td>
            <td>@Html.LabelFor(p => Model[0].fechaApertura)</td>
            <td><b>Operaciones</b></td>


        </tr>

    </thead>


    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idsucursal</td>
                <td>@item.nombre</td>
                <td>@item.direccion</td>
                <td>@item.telefono</td>
                <td>@item.email</td>
                <td>@item.fechaApertura</td>

                <td>
                    @Html.ActionLink(" ", "Editar", "Sucursal", new { id = item.idsucursal }, new { @class = "glyphicon glyphicon-edit    btn btn-primary" })
                    @Html.ActionLink(" ", "Eliminar", "Sucursal", new { id = item.idsucursal }, new { @class = "glyphicon glyphicon-trash btn btn-danger", @onclick = "eliminar()" })
                </td>


            </tr>
        }

    </tbody>


</table>

<!--VALIDACION EN JS-->
<script>
    function eliminar() {
        if (confirm("¿Desea eliminar el registro?") == 1) {
            alert(" ¡ Se elimino correctamente !")
        }
        else {
            event.preventDefault();
        }
    }
</script>
