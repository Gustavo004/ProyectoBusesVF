@using ProyectoBuses.Models;

@model List<TipoUsuarioCLS>
@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => Model[0].iidTipoUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model[0].nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => Model[0].descripcion)
        </th>
        <th>Operaciones</th>
    </tr>
    <tr>
        @using (Html.BeginForm("Index", "TipoUsuario", FormMethod.Post,new{ id = "frmBusqueda" }))
        {
        <td>@Html.TextBox("iidTipoUsuario", null, new { @class = "form-control",@name= "iidTipoUsuario" })</td>
        <td>@Html.TextBox("nombre", null, new { @class = "form-control" , @name = "nombre" })</td>
        <td>@Html.TextBox("descripcion", null, new { @class = "form-control", @name = "descripcion" })</td>
        <td></td>
        }
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.iidTipoUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
<script>
    frmBusqueda.iidTipoUsuario.addEventListener("keyup", e => {
        frmBusqueda.submit()
    })
    frmBusqueda.nombre.addEventListener("keyup", e => {
        frmBusqueda.submit()
    })
    frmBusqueda.descripcion.addEventListener("keyup", e => {
        frmBusqueda.submit()
    })

</script>